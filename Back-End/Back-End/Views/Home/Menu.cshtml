
@{
    Layout = null;
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Software DAIR</title>
    <link rel="stylesheet" href="~/styles/menu.css">
    <link rel="shortcut icon" href="~/src/logo.png">
    <!-- CSS de Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <!-- Fontawesome -->
    <link rel="stylesheet" href="ext/fa/css/all.min.css">
    <!-- JavaScript requerido -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
</head>
<header>
    <nav class="navbar">
        <div class="container-fluid">
            <h5 class="navbar--tittle"> Menú principal </h5>
            <button type="button" class="navbar--button">
                <h5 class="navbar--cerrar--sesion">
                    @Html.ActionLink("Cerrar sesión", "Login", null, new { @class = "navbar--cerrar--sesion" })
                </h5>
                <img class="navbar--icon" src="~/src/salir.png" alt="Salir">
            </button>
        </div>
    </nav>
</header>
<body>
    <div class="container">
        <div class="container--notification">
            @Html.RouteLink("Notificaciones", "Notificaciones", new { controller = "Home", action = "Notificaciones" }, new { @class = "btn btn-outline-secondary btn-notify btn-lg" })
            @Html.RouteLink("Cambiar contraseña", "CambiarContrasenna", new { controller = "Home", action = "CambiarContrasenna" }, new { @class = "btn btn-outline-secondary btn-notify btn-lg" })

        </div>
        <div class="card--container">
            <div class="card">
                <img class="card--img" src="~/src/folder.png" alt="Card image cap">
                <div class="card--body">
                    <h4 class="card--title">Sesiones de AIR</h4>
                    @Html.RouteLink("AIR", "SesionesAIR", new { controller = "Home", action = "SesionesAIR" }, new { @class = "btn btn-primary" })
                    @Html.RouteLink("DAIR", "SesionesDAIR", new { controller = "Home", action = "SesionesDAIR" }, new { @class = "btn btn-primary" })
                </div>
            </div>
            <div class="card">
                <img class="card--img" src="~/src/check.png" alt="Card image cap">
                <div class="card--body">
                    <h4 class="card--title">Asistencia</h4>
                    @Html.ActionLink("Ingresar", "AsistenciaAIR", null, new { @class = "btn btn-primary" })
                </div>
            </div>
            <div class="card">
                <img class="card--img" src="~/src/file.png" alt="Card image cap">
                <div class="card--body">
                    <h4 class="card--title">Constancias</h4>
                    @Html.ActionLink("Constancias", "Constancias", null, new { controller = "Home", action = "Constancias" }, new { @class = "btn btn-primary" })
                </div>
            </div>
            <div class="card">
                <img class="card--img" src="~/src/users.png" alt="Card image cap">
                <div class="card--body">
                    <h4 class="card--title">Padrón</h4>
                    @Html.ActionLink("Ingresar", "PadronesAIR", null, new { controller = "Home", action = "PadronAIR" }, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
</body>
</html>