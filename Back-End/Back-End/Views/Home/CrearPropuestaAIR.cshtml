@using System.Data
@model Back_End.Models.FormCrearPropuestaAIR
@{
    Layout = null;
    ViewBag.Title = "CrearPropuestaAIR";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Software DAIR</title>
    <link rel="stylesheet" href="~/styles/sesiones.css">
    <link rel="shortcut icon" href="~/src/logo.png">
    <!-- CSS de Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
          integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <!-- Fontawesome -->
    <link rel="stylesheet" href="ext/fa/css/all.min.css">
    <!-- JavaScript requerido -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
            integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
            crossorigin="anonymous"></script>
</head>
<header>
    <nav class="navbar">
        <div class="container-fluid">
            <h5 class="navbar--tittle"> Crear Propuesta de AIR</h5>
            <a href="./login.html" class="navbar--button">
                <h5 href="./login.html" class="navbar--cerrar--sesion"> Cerrar sesión </h5>
                <img class="navbar--icon" src="~/src/salir.png" alt="Salir">
            </a>
        </div>
    </nav>
</header>

<body>
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="search--container">
            @using (Html.BeginForm($"CrearPropuestaAIR/{ViewBag.SesionAIRId}", "Home", FormMethod.Post))

            {
                <form class="needs-validation" style="top: 50%; left: 50%;" novalidate>

                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label for="validationTooltip03">Nombre de la propuesta: </label>
                            @Html.TextBoxFor(model => model.Nombre, new
                            {
                                @class = "form-control",
                                type = "text"
                            })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationTooltip03">Etapa: </label>
                            @Html.DropDownList("EtapaId", (IEnumerable<SelectListItem>)ViewBag.EtapaId, String.Empty, new
                            {
                            @class = "form-control",
                            type = "select"
                            })
                            @Html.ValidationMessageFor(model => model.EtapaId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationTooltip03">Aprobado: </label>
                            @Html.DropDownList("Aprovado", (IEnumerable<SelectListItem>)ViewBag.Aprovado, String.Empty, new
                            {
                            @class = "form-control",
                            type = "select"
                            })
                            @Html.ValidationMessageFor(model => model.Aprovado, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationTooltip03">Número de Propuesta: </label>
                            @Html.TextBoxFor(model => model.NumeroPropuesta, new
                            {
                            @class = "form-control",
                            type = "number"
                            })
                            @Html.ValidationMessageFor(model => model.NumeroPropuesta, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-3 mb-3">
                            <label for="validationTooltip03">Link de la carpeta: </label>
                            @Html.TextBoxFor(model => model.Link, new
                       {
                           @class = "form-control",
                           type = "form-input"
                       })
                            @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="validationTooltip03">Votos a favor: </label>
                            @Html.TextBoxFor(model => model.VotosFavor, new
                       {
                           @class = "form-control",
                           type = "form-input"
                       })
                            @Html.ValidationMessageFor(model => model.VotosFavor, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="validationTooltip03">Votos Contra: </label>
                            @Html.TextBoxFor(model => model.VotosContra, new
                       {
                           @class = "form-control",
                           type = "form-input"
                       })
                            @Html.ValidationMessageFor(model => model.VotosContra, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="validationTooltip03">Votos Blancos: </label>
                            @Html.TextBoxFor(model => model.VotosBlanco, new
                       {
                           @class = "form-control",
                           type = "form-input"
                       })
                            @Html.ValidationMessageFor(model => model.VotosBlanco, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="container--header">
                        @Html.ActionLink("Volver", $"SesionAIR/{ViewBag.SesionAIRId}", null, new { @class = "btn btn-secondary btn-back" })
                        <button class="btn btn-primary btn-back"  type="submit">Guardar</button>
                    </div>

                </form>

            }
        </div>

        <div class="footer--container">
        </div>
</body>

</html>